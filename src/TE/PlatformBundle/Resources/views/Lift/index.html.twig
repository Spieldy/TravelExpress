{% extends "TEPlatformBundle:Core:layout.html.twig" %}

{% block content %}
  <form action="" class="Search autogrid3">
      <div>
      <label for="depart" class="hidden">Ville de départ</label>
      <input type="text" placeholder="Ville de départ" id="depart">
      </div>
      <div>
      <label for="arivee" class="hidden">Ville d'arrivée</label>
      <input type="text" placeholder="Ville d'arrivée" id="arivee">
      </div>
      <div>
      <input type="submit" class="Btn" value="Rechercher">
      </div>
  </form>
  <ul class="Lifts">
    {% for lift in lifts %}
      <li>
        <article class="Lift">
          <a href="{{ path('te_lift_view', {'id':lift.id})}}">
            <div class="LiftTitle">
              <div class="LiftIcons top">
                <span class="LiftIcons-span">{{lift.dateLift|date('d F Y H:i')}}</span>
                <span class="LiftIcons-span">{{lift.seats}} <i class="fa fa-user"></i></span>
                <span class="LiftIcons-span">{{lift.price}}<i class="fa fa-usd"></i></span>
              </div>
              <h2 class="LiftTitle-h2">{{lift.fromCity}} <i class="fa fa-long-arrow-right"></i> {{lift.toCity}}</h2>
              <div class="LiftIcons bottom">
                <span class="LiftIcons-span">{{lift.dateLift|date('d F Y H:i')}}</span>
                <span class="LiftIcons-span">{{lift.seats}} <i class="fa fa-user"></i></span>
                <span class="LiftIcons-span">{{lift.price}}<i class="fa fa-usd"></i></span>
              </div>
            </div>
          </a>
        </article>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
